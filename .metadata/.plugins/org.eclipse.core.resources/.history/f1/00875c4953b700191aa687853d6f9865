package Modules;

import Listeners.BaseClass;
import io.appium.java_client.AppiumDriver;
import io.appium.java_client.MobileElement;

import org.openqa.selenium.By;

import ElementsPath.Elements;

public class Login extends BaseClass {
	
	Elements elementPath1=new Elements();
	
	public void LoginTest(AppiumDriver<MobileElement> driver)
	{
		
		try
{
			
			driver.findElement(By.xpath("/hierarchy/android.widget.FrameLayout/android.widget.LinearLayout/android.widget.FrameLayout/android.widget.LinearLayout/android.widget.FrameLayout/android.view.ViewGroup/android.widget.TextView[4]"))
			.click();
	
		//click login btn in landing screen
		ClickBtn(elementPath1.login);
		Thread.sleep(5000);
		//Enter data and click login
		SetText(elementPath1.email1,"yangjee3@getnada.com");
		SetText(elementPath1.pass,"password1");
		ClickBtn(elementPath1.login1); 
		
		locator=elementPath1.land_profile;
		
		String profile=GetText();
		if(profile.equalsIgnoreCase("Profile Set Up"))//checking login profile title
		{
			System.out.println("User has been successfully logged in.");	
		}
		else
		{
			System.out.println("Unable to log in");
		}
		
 }


		catch(Throwable e)
		{
	e.printStackTrace();
		}

	}

}
